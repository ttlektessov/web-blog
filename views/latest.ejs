<%- include("partials/header.ejs") %>

<div class="blog-container">
  <h2>Latest Post</h2>
  <% if (latestPost) { %>
    <h3><%= latestPost.title %></h3>
    <div class="blog-body"><p><%= latestPost.body %></p></div>
    <small class="blog-date"><%= latestPost.date %></small>
  <% } else { %>
    <p>No posts available.</p>
  <% } %>
</div>

